<% if @error %>
  <p class="alert alert-danger">
    <%= @error%>
  </p>
<% else %>
  <table class="table">
    <thead>
      <th>ID</th>
      <th>External ID</th>
      <th>Status</th>
      <th>Subject</th>
      <th>Send to</th>
      <th>Amount</th>
      <th>Created at</th>
    </thead>
    <tbody>
      <% @transfers.each do |t| %>
      <tr>
        <td><%=t['id'] %></td>
        <td><%=t['external_uid'] %></td>
        <td><%=t['state'] %></td>
        <td><%=t['subject'] %></td>
        <td>
          <%=t['remote_name'] %>
          <br/>
          <%=t['remote_iban'] %>
        </td>
        <td><%=t['amount']/100.0 %> â‚¬</td>
        <td><%=t['created_at'] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end%>
